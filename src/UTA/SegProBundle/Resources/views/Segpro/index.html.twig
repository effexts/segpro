{% extends 'UTASegProBundle::admin.html.twig' %}


    {% block header %}
        <h1>Segpro list</h1>
    {% endblock %}
    {% block content %}
    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Identificador</th>
                <th>Nombre</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_segpro_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.identificador }}</td>
                <td>{{ entity.nombre }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_segpro_show', { 'id': entity.id }) }}">Mostrar</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_segpro_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_segpro_new') }}">
                Agregar nuevo registro
            </a>
        </li>
    </ul>
    {% endblock %}
