{% extends 'UTASegProBundle::layout.html.twig' %}
{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('bundles/obhighcharts/js/highcharts/highcharts.js') }}"></script>
  <script src="{{ asset('bundles/obhighcharts/js/highcharts/modules/exporting.js') }}"></script>

{% endblock %}
{% block sidebar %}
  {% endblock %}
{% block proy %}
<div class="large-12 columns">
    {% block proyectos %}
        <div class="row">
        {% for segpro in segpros %}
            <div class="large-4 small-6 left columns">
                {#<img src="http://placehold.it/1000x1000&text=Thumbnail">#}
                <div id="grafico{{ loop.index0 }}" class="border"></div>
                <div class="panel">
                    <h5><a href="{{ path('uta_segpro_resumen_proyecto', {'id':segpro.id}) }}">{{ segpro.nombre }}</a></h5>
                    <h6 class="subheader">${{ segpro.ficha.montoadjudicado | number_format(0,',','.') }}</h6>
                    <h7 class="subheader">Año de Postulación: {{ segpro.ficha.fechapostulacion | date('Y')}}</h7>
                </div>
            </div>
        {% endfor %}
        </div>
        <!-- End Thumbnails -->
    {% endblock %}
</div>
{% endblock %}

