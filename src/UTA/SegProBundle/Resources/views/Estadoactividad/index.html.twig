{% extends 'UTASegProBundle::admin.html.twig' %}


    {% block header %}
        <h1>Estado de Actividad</h1>
    {% endblock %}
            
{% block content %}
    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Estado</th>
                <th>Descripcion</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_estadoactividad_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.estado }}</td>
                <td>{{ entity.descripcion }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_estadoactividad_show', { 'id': entity.id }) }}">Mostrar</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_estadoactividad_edit', { 'id': entity.id }) }}">Editar</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_estadoactividad_new') }}">
                Agregar nuevo registro
            </a>
        </li>
    </ul>
    {% endblock %}
