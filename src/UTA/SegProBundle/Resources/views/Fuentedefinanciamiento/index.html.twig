{% extends 'UTASegProBundle::admin.html.twig' %}
{% block title %}Fuentes de Financiamiento{% endblock %}


    {% block header %}
        <h1>Fuentes de Financiamiento</h1>
    {% endblock %}
            
{% block content %}
    <table class="records_list">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Descripci√≥n</th>
                <th>Fecha Apertura</th>
                <th>Fecha Cierre</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_fuentedefinanciamiento_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombre }}</td>
